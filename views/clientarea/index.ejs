<% include ../inc/header %>
<div class="container">
  <h1>Client area</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include ../inc/usercpsider.ejs %>
    </div>
    <div class="col-md-8">
      <div class="list-group">
        <div class="list-group-item active">
          <h5 class="mb-1">Overall</h5>
        </div>
        <div class="list-group">
          <div class="list-group-item">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Statas</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% services.forEach(function(service){ %>
                  <tr>
                    <td><span style="color:#4caf50 "><%= service.service.status %></span></td>
                    <% if(service.service.status == "ACTIVE" ){%>
                      <td><a href="/clientarea/hostings/<%= service._id %>" class="btn btn-info">Manage</a></td>
                    <% } else { %>
                      <td><a href="#" class="btn btn-warning disabled">Manage</a></td>
                    <% } %>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
    </div>
  </div>
<% include ../inc/footer %>
