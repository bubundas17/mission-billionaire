<% include ../../inc/header %>
<div class="container">
    <h1>Client area</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <% include ../../inc/usercpsider.ejs %>
        </div>
        <div class="col-md-8">
            <div class="list-group">
                <div class="list-group-item active">
                    <h5>Withdrawal Requests</h5>
                </div>
                <div class="list-group-item">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Amount</th>
                            <th>TKC Address</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <% widwrawls.forEach( token => { %>
                        <tbody>
                        <tr>
                            <td><strong><%= token.amount %> TKC</strong></td>
                            <td><span><%= token.tkcaddress %></span></td>
                            <td><span><%= token.status %></span></td>
                        </tr>
                        </tbody>
                        <% }) %>
                    </table>
                </div>
            </div>


            <div class="list-group">
                <div class="list-group-item active">
                    <h5>Recharge Requests</h5>
                </div>
                <div class="list-group-item">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Mo. Number</th>
                            <th>INR</th>
                            <th>TKC</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <% recharges.forEach( token => { %>
                        <tbody>
                        <tr>
                            <td><strong><%= token.info.number %></strong></td>
                            <td><span><%= token.info.amount %> INR</span></td>
                            <td><span><%= token.amount %> TKC</span></td>
                            <td><span><%= token.status %></span></td>
                        </tr>
                        </tbody>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../inc/footer %>
