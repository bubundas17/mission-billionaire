<% include ../inc/usercpHead %>
<% include ../inc/profilesider %>
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Your Profile Info</h4>
    </div>
    <div class="panel-body">
        <div class="list-group">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                    <p class="form-control-static"><%= user.meta.email %></p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Phone:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> <%= user.meta.phone %> </p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">BIT Coin Address:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> <%= user.bitcoin %> </p>
                </div>
            </div>
        </div>
        <a href="/profile/edit" class="btn btn-success"> Edit</a>
        <a href="/profile/chengepass" class="btn btn-info"> Change Password</a>
    </div>
</div>

<% include ../inc/footer %>
