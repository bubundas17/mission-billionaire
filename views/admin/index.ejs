<% include ../inc/header %>
<div class="container">
  <h1>Admin Area</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include ../inc/admincpsider.ejs %>
    </div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5>Overall</h5>
        </div>
        <div class="panel-body">
          <div class="list-group">
            <div class="list-group-item active">
              <h6> Pending Activations </h6>
            </div>
            <div class="list-group-item">
              <table class="table">
                <thead>
                  <tr>
                    <th>Username</th>
                    <th>Package</th>
                    <th>Domain</th>
                    <th>status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% services.forEach(function(service){ %>
                    <tr>
                      <td><%= service.user.username %></td>
                      <td><%= service.service.package %></td>
                      <td><%= service.service.domain %></td>
                      <td><%= service.service.status %></td>
                      <td><a href="/admin/services/<%= service._id %>" class="btn btn-info">View</a>
                        <a href="/admin/services/<%= service._id %>/edit" class="btn btn-success">Edit</a>
                        <a href="/admin/services/<%= service._id %>?_method=DESTROY" class="btn btn-warning">Delete</a></td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
          </div>

          <div class="list-group">
            <div class="list-group-item active">
              <h6> Pending Tickets </h6>
            </div>
            <div class="list-group-item">
              <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Statas</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <% tickets.forEach( ticket => { %>
                    <tbody>
                        <tr>
                          <td><span style="color:#4caf50"><%= ticket.status %></span></td>
                          <td><a href="/admin/tickets/<%= ticket._id %>" class="btn btn-info">View</a></td>
                        </tr>
                      </tbody>
                  <% }) %>
              </table>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../inc/footer %>
