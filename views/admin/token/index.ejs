<% include ../../inc/header %>
<div class="container">
  <h1>Client area</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include ../../inc/admincpsider.ejs %>
    </div>
    <div class="col-md-8">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4>View Tokens</h4>
        </div>
        <div class="panel-body">
          <div class="panel panel-default">
            <div class="panel-heading">
              All Tokens
            </div>
            <div class="list-group-item">
              <form class="form-inline" action="" method="get">
                <div class="form-gtoup">
                  <label for="Search">Search Tokens:</label>
                  <input type="text" name="q" id="" class="form-control">
                  <button class="form-control btn btn-info btn-sm" >Search</button>
                </div>
              </form>
            </div>
            <div class="panel-body">
              <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Token Code</th>
                      <th>isActive</th>
                      <th>User</th>
                    </tr>
                  </thead>
                  <% tokens.docs.forEach( token => { %>
                    <tbody>
                        <tr>
                          <td><%= token.code %></td>
                          <td><strong><span style="color:<%= token.user ? "#ff0050": "#4caf50" %>"><%= token.user ? "Used": "Active" %></span></strong></td>
                          <td><span><%= token.user ? token.user.username : "Not Yet Used"  %></span></td>
                        </tr>
                      </tbody>
                  <% }) %>
              </table>
              <%
              var q = req.query.q || "";
              %>
              <nav aria-label="Pagenation"  class="center">
                <ul class="pagination">
                  <%if(tokens.page <= 1){ %>
                    <li class="disabled"><a aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                    <% } else { %>
                      <li><a href="?<%= func.objtoQuery({
                        q: q,
                        page: tokens.page-1
                      }) %>" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                      <% } %>

                      <% for(i=1; i<= tokens.pages; i++) { %>
                        <%if(tokens.page == i){ %>
                          <li class="active"><a><%= i %><span class="sr-only">(current)</span></a></li>
                          <% } else { %>
                            <li><a href="?<%= func.objtoQuery({
                              q: q,
                              page: i
                            }) %>" ><%= i %></a></li>
                            <% } %>
                            <% }%>


                            <%if(tokens.page == tokens.pages){ %>
                              <li class="disabled"><a aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                              <% } else { %>
                                <li><a href="?<%= func.objtoQuery({
                                  q: q,
                                  page: parseInt(tokens.page) + 1
                                }) %>" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                                <% } %>
                              </ul>
                            </nav>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
<% include ../../inc/footer %>
