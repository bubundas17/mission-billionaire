<div class="panel panel-default">
  <div class="panel-body">
    <div class="center">
      <i class="fa fa-user-circle fa-5x author-image" aria-hidden="true"></i>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%
          var usergroup = ""
          switch (userInfo.userGroup) {
            case 1:
              usergroup = "Active User"
              break;
            case 2:
              usergroup = "Gold User"
              break;
            case 3:
              usergroup = "Platunum User"
              break;
            case 4:
              usergroup = "Dimond User"
              break;
          }
        %>
        <strong><h6 class="panel-title"><%= userInfo.username %> <span class="badge badge-pill badge-success"><%= usergroup %></span></h6></Strong>
      </div>
      <div class="list-group-item">
        <strong>Credits: <a href="/clientarea/statement">TKC <%= userInfo.credits.toFixed(3) %></a></Strong>
      </div>
    </div>

    <div class="panel panel-default" id="panel1">
        <div class="panel-heading">
          <span data-toggle="collapse" data-target="#collapse14" >
            <h4 class="panel-title"> Referrals
        <span class="badge"><i class="glyphicon glyphicon-plus" aria-hidden="true"></i></span>
        </h4>
    </span>
        </div>
        <div id="collapse14" class="collapse"  aria-expanded="false">
        <a href="/clientarea/referrals/direct" class="list-group-item"> Direct Referrals </a>
        </div>
    </div>

    <div class="panel panel-default" id="panel1">
        <div class="panel-heading">
          <span data-toggle="collapse" data-target="#collapse1" >
            <h4 class="panel-title"> Income
        <span class="badge"><i class="glyphicon glyphicon-plus" aria-hidden="true"></i></span>
        </h4>
    </span>
        </div>
        <div id="collapse1" class="collapse"  aria-expanded="false">
        <a href="/clientarea/income/referral" class="list-group-item"> Referal income </a>
        <a href="/clientarea/income/nonworking" class="list-group-item"> Non Working Income</a>
        <a href="/clientarea/income/gold" class="list-group-item"> Gold Income </a>
        <a href="/clientarea/income/platinum" class="list-group-item"> Platinum Income </a>
        <a href="/clientarea/income/dimond" class="list-group-item"> Dimond Income </a>
        </div>
    </div>

    <div class="panel panel-default" id="panel5">
        <div class="panel-heading">
          <span data-toggle="collapse" data-target="#collapse15" >
            <h4 class="panel-title"> Widwrawl
        <span class="badge"><i class="glyphicon glyphicon-plus" aria-hidden="true"></i></span>
        </h4>
    </span>
        </div>
        <div id="collapse15" class="collapse"  aria-expanded="false">
        <a href="/clientarea/widwrawl" class="list-group-item">Widwrawl Requests </a>
        <a href="/clientarea/widwrawl/tkc" class="list-group-item"> Widwrawl Via TKC Coin </a>
        <a href="/clientarea/widwrawl/recharge" class="list-group-item"> Widwrawl Via Mobile Recharge (INDIA ONLY) </a>
    </div>
  </div>
    <div class="panel panel-default" id="panel2">
        <div class="panel-heading">
          <span data-toggle="collapse" data-target="#collapse2" >
             <h4 class="panel-title"> Support Tickets
        <span class="badge"><i class="glyphicon glyphicon-plus" aria-hidden="true"></i></span>
      </h4>
    </span>
        </div>
        <div id="collapse2" class="collapse"  aria-expanded="false">
        <a href="/clientarea/tickets" class="list-group-item">Support Tickets</a>
        <a href="/clientarea/tickets/new" class="list-group-item">New Support Request</a>
        <a href="/clientarea/hostings" class="list-group-item">View Support Teckits</a>
        </div>
    </div>


  </div>
</div>

<script>
$('.collapse').on('shown.bs.collapse', function(){
  $(this).parent().find(".glyphicon-plus").removeClass("glyphicon-plus").addClass("glyphicon-minus");
}).on('hidden.bs.collapse', function(){
  $(this).parent().find(".glyphicon-minus").removeClass("glyphicon-minus").addClass("glyphicon-plus");
});
</script>
