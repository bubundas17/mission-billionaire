<%- include ../inc/header %>
<div class="particles">
  <div id="particles-js">
  </div>
  <div class="container">
    <form class="" action="" method="POST">
      <div class="panel panel-warning signup animated fadeIn">
        <div class="panel-heading">
          <h4>Create An Account</h4>
        </div>
        <div class="panel-body">
          <div class="list-group">
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2">Full Name:</label>
                <div class="col-sm-10">
                  <input type="text" name="name" value="" class="form-control" placeholder="Your Name">
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Choose Username:</label>
                <div class="col-sm-10">
                  <input type="text" name="username" id="username" value="" class="form-control" placeholder="Username">
                  <small>Username must be at least 6 characters long</small>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2">Pssword:</label>
                <div class="col-sm-10">
                  <input type="password" name="password" value="" class="form-control" placeholder="password">
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                  <input type="email" name="email" value="" placeholder="Email ID" class="form-control" required>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Phone:</label>
                <div class="col-sm-10">
                  <input type="text" name="phone" value="" class="form-control" placeholder="Phone Number" required>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">DOB:</label>
                <div class="col-sm-10">
                  <input type="date" name="dateOfBarth" value="" class="form-control" placeholder="mm/dd/yy" required>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Kitcoin Addreds:</label>
                <div class="col-sm-10">
                  <input type="text" name="bitcoin" value="" class="form-control" placeholder="Enter Your TKC wallet address." required>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Country:</label>
                <div class="col-sm-10">
                  <select name="country" class="form-control" id="country" required>
                  </select>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">State:</label>
                <div class="col-sm-10">
                  <select name="state" class="form-control" id="state" required>
                  </select>
                </div>
              </div>
            </div>
            <div class="list-group-item">
              <label for="Re Captcha">Are you a robot?</label>
              <div class="g-recaptcha" data-sitekey="6Lfm3jUUAAAAAMJp4uIn_gcdmjqQIC3H2-ikzZ7r"></div>
            </div>
            <div class="list-group-item">
              <strong>By creating an account you agree to our <a href="/tos/">Terms</a> & <a href="/privacy/">Privacy</a>.</strong>
              <br>
              <input type="submit" name="" value="Sign Up" class="btn btn-success btn-large">
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="/lib/js/particles.js"></script>
<script>
particlesJS.load('particles-js', '/particles.json');
</script>
<script src='https://www.google.com/recaptcha/api.js'></script>
<script type="text/javascript" src="/js/selectStates.js"> </script>
<script type="text/javascript">
populateCountries("country", "state");
</script>

<script>
  function validateUsername(){
    $('#email').keyup(function(){
  $.ajax({
    type: 'POST',
    url: '/checkusername',
    data: {e:$('#email').val()},
    success: function(data){
      if(data == 'true'){
        $('#emailError').html('This email is already used');
      }else{
        $('#emailError').html('');
      }
    }
  })
});
  }
</script>
