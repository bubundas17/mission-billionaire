<% include ../inc/header %>
<div class="particles">
  <div id="particles-js">
  </div>
  <div class="panel panel-success login animated fadeIn">
    <div class="panel-heading">
      <h4><i class="fa fa-users" aria-hidden="true"></i> Login to your account</h2>
      </div>
      <div class="panel-body">
        <form class="" action="/login" method="post">
          <% if (ref) { %>
            <input type="hidden" name="ref" value="<%- ref %>">
            <% } %>
            <div class="list-group">
              <div class="list-group-item">
                <div class="form-group">
                  <label><strong><i class="fa fa-user-circle-o" aria-hidden="true"></i> Username</strong></label>
                  <input type="text" name="username" value="" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                  <label><strong><i class="fa fa-key" aria-hidden="true"></i> Password</strong></label>
                  <input type="password" name="password" class="form-control" value="" placeholder="Password">
                </div>
              </div>
              <div class="list-group-item center">
                <button name="button" class="btn btn-success"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
                <a class="btn btn-info" href="/resetpwd" title="Click Here To Reset Your Password.">Forgot Password? <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/lib/js/particles.js"></script>
    <script>
    particlesJS.load('particles-js', '/particles.json');
    </script>
    <% include ../inc/footer %>
